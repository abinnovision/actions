{
  "name": "run-commitlint",
  "version": "1.1.0",
  "license": "Apache-2.0",
  "type": "module",
  "author": {
    "name": "abi group GmbH",
    "email": "info@abigroup.io",
    "url": "https://abigroup.io/"
  },
  "files": [
    "dist",
    "README.md",
    "CHANGELOG.md",
    "LICENSE.md",
    "action.yml"
  ],
  "scripts": {
    "build": "ncc build src/index.ts",
    "build:watch": "ncc build --watch src/index.ts",
    "format:check": "prettier --check 'src/**/*.{ts,js}' '*.{md,json,json5,yaml,yml}'",
    "format:fix": "prettier --write 'src/**/*.{ts,js}' '*.{md,json,json5,yaml,yml}'",
    "lint:check": "eslint 'src/**/*.{ts,js}'",
    "lint:fix": "eslint --fix 'src/**/*.{ts,js}'"
  },
  "lint-staged": {
    "src/**/*.{ts,js}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{md,json,json5,yaml,yml}": [
      "prettier --write"
    ]
  },
  "prettier": "@abinnovision/prettier-config",
  "dependencies": {
    "@abinnovision/commitlint-config": "^2.2.1",
    "@actions/core": "^1.11.1",
    "@actions/github": "^6.0.0",
    "@commitlint/execute-rule": "^19.0.0",
    "@commitlint/format": "^19.3.0",
    "@commitlint/lint": "^19.6.0",
    "chalk": "^5.3.0",
    "conventional-changelog-conventionalcommits": "^8.0.0"
  },
  "devDependencies": {
    "@abinnovision/eslint-config-base": "^2.2.0",
    "@abinnovision/eslint-config-typescript": "^2.2.1",
    "@abinnovision/prettier-config": "^2.1.3",
    "@commitlint/types": "^19.6.0",
    "@vercel/ncc": "^0.38.3",
    "eslint": "^9.38.0",
    "globals": "^16.4.0",
    "prettier": "^3.6.2",
    "typescript": "^5.7.2"
  }
}