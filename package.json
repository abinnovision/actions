{
	"name": "abinnovision-actions",
	"repository": "git@github.com:abinnovision/actions.git",
	"version": "0.0.0-development",
	"author": {
		"name": "AB INNOVISION UG (limited liability)",
		"email": "info@abinnovision.com",
		"url": "https://abinnovision.com/"
	},
	"private": true,
	"license": "proprietary",
	"engineStrict": true,
	"engines": {
		"node": ">=16"
	},
	"packageManager": "yarn@3.4.1",
	"workspaces": [
		"actions/*"
	],
	"devDependencies": {
		"@abinnovision/eslint-config-base": "^1.0.0",
		"@abinnovision/eslint-config-typescript": "^1.0.0",
		"@abinnovision/prettier-config": "^1.0.0",
		"@commitlint/cli": "^17.4.2",
		"@commitlint/config-conventional": "^17.4.4",
		"@typescript-eslint/eslint-plugin": "^5.54.1",
		"@typescript-eslint/parser": "^5.54.1",
		"concurrently": "^7.6.0",
		"eslint": "^8.35.0",
		"eslint-config-prettier": "^8.7.0",
		"eslint-plugin-import": "^2.27.5",
		"husky": "^8.0.0",
		"lint-staged": "^13.1.0",
		"prettier": "^2.8.3"
	},
	"scripts": {
		"build": "yarn workspaces foreach --topological -p run build",
		"fix": "concurrently 'yarn:eslint:fix' 'yarn:prettier:fix'",
		"check": "concurrently 'yarn:eslint:check' 'yarn:prettier:check'",
		"commitlint:check": "commitlint --edit",
		"eslint:check": "eslint --ignore-path .gitignore '**/src/**/*.{tsx,ts}'",
		"eslint:fix": "eslint --ignore-path .gitignore --fix '**/src/**/*.{tsx,ts}'",
		"prettier:check": "prettier --ignore-path .gitignore --check '**/*.{json,json5,yaml,yml,md}'",
		"prettier:fix": "prettier --ignore-path .gitignore --write '**/*.{json,json5,yaml,yml,md}'",
		"postinstall": "husky install",
		"link": "ls packages | while read package; do ln -s \"packages/$package\" \".$package\"; done"
	},
	"commitlint": {
		"extends": [
			"@abinnovision/commitlint-config"
		]
	},
	"prettier": "@abinnovision/prettier-config",
	"eslintConfig": {
		"extends": [
			"@abinnovision/base",
			"@abinnovision/typescript",
			"prettier"
		]
	},
	"lint-staged": {
		"**/src/**/*.{ts,tsx,js}": [
			"prettier",
			"eslint"
		],
		"**/*.{json,json5,yaml,yml,md}": [
			"prettier"
		]
	}
}
