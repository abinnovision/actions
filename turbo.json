{
	"$schema": "https://turbo.build/schema.json",
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": ["dist/**"],
			"inputs": ["src/**", "assets/**", "shims.d.ts"]
		},
		"fix": {
			"dependsOn": ["format:fix", "lint:fix"]
		},
		"check": {
			"dependsOn": ["format:check", "lint:check"]
		},
		"format:fix": {
			"cache": false
		},
		"format:check": {
			"cache": false
		},
		"lint:fix": {
			"cache": false
		},
		"lint:check": {
			"cache": false
		}
	}
}
